<UserControl x:Class="NASA_APIs.WPF.Views.UserControls.NeoWs.NeoWsMenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NASA_APIs.WPF.Views.UserControls.NeoWs"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Aqua">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Style="{StaticResource dashboardBtn}" VerticalAlignment="Bottom" 
                Command="{Binding NavigateMenuCommand}" Margin="5,5,5,5"
                VerticalContentAlignment="Center" HorizontalContentAlignment="Left">
            <fa:IconImage Icon="Backward" Style="{StaticResource btnIcon}"/>
            <Button.ToolTip>
                Back To Main Menu
            </Button.ToolTip>
        </Button>
        <TextBlock Grid.Row="2" Text="NeoWs" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
       
    </Grid>
</UserControl>
